<div class="modal-content">
	<div class="modal-header">
        Fai la tua proposta
    </div>
    <div class="modal-body">
        {% set action = not isEdit ? "return compileEventDescription()" : "return compileEditEventDescription()" %}
        {{ form_start(form, {'attr': {action:path('event_proposal', {id:proposal.id}), onsubmit: action } }) }}
        <div class="row">
        	<div class="col-xs-12">
                <div class="form-group">
                    {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
                </div>
        	</div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <div class="form-group">
                    {{ form_row(form.validity, {'attr': {'class': 'form-control date-validity'}}) }}
                </div>
            </div>
        </div>
        <div class="row">
        	<div class="col-xs-12">
                <div class="form-group">
                    {{ form_row(form.lineup, {'attr': {'class': 'form-control disabled'}}) }}
                </div>
        	</div>
    	</div>
        {% if not isEdit %}
        <div class="row">
            <div class="col-xs-12">
                <div class="form-group">
                    {{ form_row(form.happening, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>
        {% else %}
        <div class="row">
            <div class="col-xs-12">
                <div class="form-group">
                    <strong>[IG] Eventi della serata <small>(la tua proposta è stata inviata quindi questa sezione non è modificale)</small></strong>
                    <p>{{ proposal.happening }}</p>
                </div>
            </div>
        </div>
        {% endif %}
        {% include 'common/text-editor.html.twig' with {'form':form, 'label':form.description.vars.label, 'field': 'description'} %}
    	<div class="row">
        	<div class="col-xs-12">
            	<div class="form-group">
                    <button type="submit" class="btn btn-default">Invia</button>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
</div>