<div class="modal-content">
	<div class="modal-header">
        Fai la tua proposta
    </div>
    <div class="modal-body">
        {{ form_start(form) }}
        <div class="row">
        	<div class="col-xs-12">
                <div class="form-group">
                    {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
                </div>
        	</div>
        </div> 
        <div class="row"> 
        	<div class="col-xs-12">
                <div class="form-group">
                    {{ form_row(form.lineup, {'attr': {'class': 'form-control'}}) }}
                </div>
        	</div>
    	</div>
    	<div class="row">
        	<div class="col-xs-12">
                <div class="form-group">
                    {{ form_row(form.description, {'attr': {'class': 'form-control'}}) }}
                </div>
        	</div>
    	</div>
    	<div class="row">
        	<div class="col-xs-12">
            	<div class="form-group">
                    <button type="submit" class="btn btn-default">Invia</button>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
</div>