<div class="modal-content">
    <div class="modal-header">
        Scrivi la lettera
    </div>
    <div class="modal-body">
        {{ form_start(form, {'attr': {action:path('letter-send') ,'onsubmit':"return compileLetterText()"} }) }}
        <div class="row">
            <div class="col-xs-12">
                <div class="form-group">
                    {{ form_row(form.recipient, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>
        {% include 'common/text-editor.html.twig' with {'form':form, 'label':form.text.vars.label, 'field': 'text'} %}
        <div class="row">
            <div class="col-xs-12">
                <div class="form-group">
                    <button type="submit" class="btn btn-default">Invia</button>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
</div>