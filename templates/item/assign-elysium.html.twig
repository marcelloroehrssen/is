<div class="modal-content">
    {{ form_start(form, {attr: {action: path('item-associate', {iid:item.id})}}) }}
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                    aria-hidden="true">&times;</span></button>
        <h4 id="edict-title" class="modal-title">Assegna ad Elyseum</h4>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-xs-12">
                <div class="form-group">
                    {{ form_row(form.elysia, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <input type="submit" class="btn btn-info" value="Assegna"/>
    </div>
    {{ form_end(form) }}
</div>